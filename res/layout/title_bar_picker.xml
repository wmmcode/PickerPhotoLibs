<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_bar_picker"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#285187"
    android:gravity="center_vertical"
    android:minHeight="50dp"
    android:padding="5dp" >

    <TextView
        android:id="@+id/title_bar_picker_left_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/leftarrow"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/title_bar_picker_left_back_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@id/title_bar_picker_left_back"
        android:text="返回"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/title_bar_picker_right_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="144dp"
        android:layout_toRightOf="@id/title_bar_picker_left_back_text"
        android:background="@drawable/menu_delete" />

    <TextView
        android:id="@+id/title_bar_picker_right_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/title_bar_picker_right_delete"
        android:layout_alignParentRight="true"
        android:text="确认"
        android:textSize="15sp" 
        android:singleLine="true"
        android:textColor="@color/white"/>

</RelativeLayout>